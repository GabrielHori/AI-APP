{
  "name": "ia-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev-frontend": "cd frontend && npx vite --port 5173",
    "dev-electron": "wait-on tcp:5173 && npx electron ./electron",
    "dev": "concurrently \"npm run dev-frontend\" \"npm run dev-electron\"",
    "build-frontend": "cd frontend && npx vite build",
    "start": "npx electron ./electron"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^26.6.10",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  }
}
